<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>susCoin Cash Out - Connect Mastercard</title>
    <meta name="description" content="Link your Mastercard to cash out susCoins for real money">
    
    <!-- Tailwind CSS -->
    <link href="/styles/output.css" rel="stylesheet">
    
    <!-- Socket.IO -->
    <script src="/socket.io/socket.io.js"></script>
</head>
<body class="bg-sus-bg text-sus-text font-sans antialiased">
    <!-- Header -->
    <header class="bg-sus-card border-b border-sus-line sticky top-0 z-40">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <div class="flex items-center">
                    <a href="/dashboard" class="text-2xl font-bold text-sus-primary">🌍 susCoin</a>
                </div>
                <div class="flex items-center space-x-4">
                    <a href="/dashboard" class="text-sus-muted hover:text-sus-text transition-colors px-3 py-2">Dashboard</a>
                    <a href="/wallet" class="text-sus-muted hover:text-sus-text transition-colors px-3 py-2">Wallet</a>
                    <a href="/redeem" class="text-sus-muted hover:text-sus-text transition-colors px-3 py-2">Redeem</a>
                    <div class="flex items-center space-x-2">
                        <div class="w-8 h-8 bg-sus-primary rounded-full flex items-center justify-center text-white text-sm font-semibold">
                            <%= user.avatar || user.name.charAt(0).toUpperCase() %>
                        </div>
                        <span class="text-sm font-medium"><%= user.name %></span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Header Section -->
        <div class="mb-8 text-center">
            <h1 class="text-3xl font-bold text-sus-text mb-2">💳 Cash Out Your susCoins</h1>
            <p class="text-sus-muted">Link your Mastercard to convert susCoins to real money</p>
        </div>

        <!-- Balance Display -->
        <div class="card mb-8">
            <div class="text-center">
                <div class="text-4xl font-bold text-sus-primary mb-2"><%= user.balance || 440 %></div>
                <div class="text-sus-muted text-lg">susCoins Available for Cash Out</div>
                <div class="text-sm text-sus-muted mt-2">≈ $<%= ((user.balance || 440) * 0.01).toFixed(2) %> USD</div>
            </div>
        </div>

        <!-- Cash Out Options -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
            <div class="card text-center hover:shadow-lg transition-shadow">
                <div class="text-4xl mb-3">💰</div>
                <h3 class="font-semibold mb-2">Instant Cash Out</h3>
                <p class="text-sm text-sus-muted">Get money in 24 hours</p>
                <div class="text-xs text-sus-muted mt-2">Fee: 2.5%</div>
            </div>
            <div class="card text-center hover:shadow-lg transition-shadow">
                <div class="text-4xl mb-3">⚡</div>
                <h3 class="font-semibold mb-2">Express Cash Out</h3>
                <p class="text-sm text-sus-muted">Get money in 2-3 hours</p>
                <div class="text-xs text-sus-muted mt-2">Fee: 3.5%</div>
            </div>
            <div class="card text-center hover:shadow-lg transition-shadow">
                <div class="text-4xl mb-3">🚀</div>
                <h3 class="font-semibold mb-2">Premium Cash Out</h3>
                <p class="text-sm text-sus-muted">Get money instantly</p>
                <div class="text-xs text-sus-muted mt-2">Fee: 5.0%</div>
            </div>
        </div>

        <!-- Mastercard Connection Form -->
        <div class="card">
            <h2 class="text-2xl font-semibold mb-6">🔗 Connect Your Mastercard</h2>
            
            <form id="mastercardForm" class="space-y-6">
                <!-- Card Number -->
                <div>
                    <label for="cardNumber" class="block text-sm font-medium text-sus-text mb-2">
                        Card Number
                    </label>
                    <div class="relative">
                        <input
                            id="cardNumber"
                            name="cardNumber"
                            type="text"
                            required
                            class="input-field w-full pl-12"
                            placeholder="1234 5678 9012 3456"
                            maxlength="19"
                        >
                        <div class="absolute left-3 top-1/2 transform -translate-y-1/2 text-2xl">💳</div>
                    </div>
                </div>

                <!-- Card Details Row -->
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                    <!-- Expiry Date -->
                    <div>
                        <label for="expiryDate" class="block text-sm font-medium text-sus-text mb-2">
                            Expiry Date
                        </label>
                        <input
                            id="expiryDate"
                            name="expiryDate"
                            type="text"
                            required
                            class="input-field w-full"
                            placeholder="MM/YY"
                            maxlength="5"
                        >
                    </div>

                    <!-- CVV -->
                    <div>
                        <label for="cvv" class="block text-sm font-medium text-sus-text mb-2">
                            CVV
                        </label>
                        <input
                            id="cvv"
                            name="cvv"
                            type="text"
                            required
                            class="input-field w-full"
                            placeholder="123"
                            maxlength="4"
                        >
                    </div>

                    <!-- Card Type -->
                    <div>
                        <label for="cardType" class="block text-sm font-medium text-sus-text mb-2">
                            Card Type
                        </label>
                        <select id="cardType" name="cardType" class="input-field w-full" required>
                            <option value="">Select card type</option>
                            <option value="debit">Debit Card</option>
                            <option value="credit">Credit Card</option>
                            <option value="prepaid">Prepaid Card</option>
                        </select>
                    </div>
                </div>

                <!-- Cardholder Name -->
                <div>
                    <label for="cardholderName" class="block text-sm font-medium text-sus-text mb-2">
                        Cardholder Name
                    </label>
                    <input
                        id="cardholderName"
                        name="cardholderName"
                        type="text"
                        required
                        class="input-field w-full"
                        placeholder="As it appears on your card"
                    >
                </div>

                <!-- Billing Address -->
                <div>
                    <label for="billingAddress" class="block text-sm font-medium text-sus-text mb-2">
                        Billing Address
                    </label>
                    <textarea
                        id="billingAddress"
                        name="billingAddress"
                        required
                        class="input-field w-full"
                        rows="3"
                        placeholder="Enter your billing address"
                    ></textarea>
                </div>

                <!-- Cash Out Amount -->
                <div>
                    <label for="cashOutAmount" class="block text-sm font-medium text-sus-text mb-2">
                        Amount to Cash Out
                    </label>
                    <div class="relative">
                        <input
                            id="cashOutAmount"
                            name="cashOutAmount"
                            type="number"
                            required
                            class="input-field w-full pr-20"
                            placeholder="100"
                            min="50"
                            max="<%= user.balance || 440 %>"
                        >
                        <div class="absolute right-3 top-1/2 transform -translate-y-1/2 text-sus-muted">
                            susCoins
                        </div>
                    </div>
                    <div class="text-sm text-sus-muted mt-1">
                        Available: <%= user.balance || 440 %> susCoins
                    </div>
                </div>

                <!-- Terms and Conditions -->
                <div class="flex items-start">
                    <input
                        id="terms"
                        name="terms"
                        type="checkbox"
                        required
                        class="h-4 w-4 text-sus-primary focus:ring-sus-primary border-sus-line rounded mt-1"
                    >
                    <label for="terms" class="ml-2 block text-sm text-sus-muted">
                        I agree to the 
                        <a href="#" class="text-sus-primary hover:text-sus-primary-dark transition-colors">Terms of Service</a>
                        and 
                        <a href="#" class="text-sus-primary hover:text-sus-primary-dark transition-colors">Privacy Policy</a>
                    </label>
                </div>

                <!-- Submit Button -->
                <button
                    type="submit"
                    class="btn-primary w-full py-3 text-lg"
                    id="connectBtn"
                >
                    <span id="connectBtnText">Connect Mastercard & Cash Out</span>
                    <span id="connectBtnLoading" class="hidden">
                        <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white inline" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                        </svg>
                        Processing...
                    </span>
                </button>
            </form>
        </div>

        <!-- How It Works -->
        <div class="card bg-sus-primary/10 border-sus-primary/20 mt-8">
            <h2 class="text-2xl font-semibold mb-6 text-center">🔄 How Cash Out Works</h2>
            <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
                <div class="text-center">
                    <div class="text-4xl mb-3">1️⃣</div>
                    <h3 class="font-semibold mb-2">Link Card</h3>
                    <p class="text-sm text-sus-muted">Connect your Mastercard securely</p>
                </div>
                <div class="text-center">
                    <div class="text-4xl mb-3">2️⃣</div>
                    <h3 class="font-semibold mb-2">Choose Amount</h3>
                    <p class="text-sm text-sus-muted">Select how many susCoins to cash out</p>
                </div>
                <div class="text-center">
                    <div class="text-4xl mb-3">3️⃣</div>
                    <h3 class="font-semibold mb-2">Confirm</h3>
                    <p class="text-sm text-sus-muted">Review fees and confirm transaction</p>
                </div>
                <div class="text-center">
                    <div class="text-4xl mb-3">4️⃣</div>
                    <h3 class="font-semibold mb-2">Receive Money</h3>
                    <p class="text-sm text-sus-muted">Get money in your bank account</p>
                </div>
            </div>
        </div>

        <!-- Security Features -->
        <div class="card bg-sus-secondary/10 border-sus-secondary/20 mt-8">
            <h2 class="text-2xl font-semibold mb-6 text-center">🔒 Security & Trust</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <div class="text-center">
                    <div class="text-4xl mb-3">🔐</div>
                    <h3 class="font-semibold mb-2">Bank-Level Security</h3>
                    <p class="text-sm text-sus-muted">256-bit encryption and PCI compliance</p>
                </div>
                <div class="text-center">
                    <div class="text-4xl mb-3">🛡️</div>
                    <h3 class="font-semibold mb-2">Fraud Protection</h3>
                    <p class="text-sm text-sus-muted">Advanced fraud detection systems</p>
                </div>
                <div class="text-center">
                    <div class="text-4xl mb-3">✅</div>
                    <h3 class="font-semibold mb-2">Verified Partners</h3>
                    <p class="text-sm text-sus-muted">Trusted financial institutions only</p>
                </div>
            </div>
        </div>
    </main>

    <!-- Navigation Footer -->
    <nav class="fixed bottom-0 left-0 right-0 bg-sus-card border-t border-sus-line lg:hidden">
        <div class="flex justify-around py-2">
            <a href="/dashboard" class="flex flex-col items-center p-2 text-sus-muted hover:text-sus-text">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5a2 2 0 012-2h4a2 2 0 012 2v6H8V5z"></path>
                </svg>
                <span class="text-xs mt-1">Dashboard</span>
            </a>
            <a href="/wallet" class="flex flex-col items-center p-2 text-sus-muted hover:text-sus-text">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
                </svg>
                <span class="text-xs mt-1">Wallet</span>
            </a>
            <a href="/redeem" class="flex flex-col items-center p-2 text-sus-muted hover:text-sus-text">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"></path>
                </svg>
                <span class="text-xs mt-1">Redeem</span>
            </a>
            <a href="/connect-mastercard" class="flex flex-col items-center p-2 text-sus-primary">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
                </svg>
                <span class="text-xs mt-1">Cash Out</span>
            </a>
        </div>
    </nav>

    <script>
        // Initialize Socket.IO
        const socket = io();
        
        // Track page view
        socket.emit('analytics', { event: 'page_view', data: { page: 'connect-mastercard' } });

        // Card number formatting
        const cardNumberInput = document.getElementById('cardNumber');
        cardNumberInput.addEventListener('input', function(e) {
            let value = e.target.value.replace(/\s+/g, '').replace(/[^0-9]/gi, '');
            let formattedValue = value.match(/.{1,4}/g)?.join(' ') || value;
            e.target.value = formattedValue;
        });

        // Expiry date formatting
        const expiryInput = document.getElementById('expiryDate');
        expiryInput.addEventListener('input', function(e) {
            let value = e.target.value.replace(/\D/g, '');
            if (value.length >= 2) {
                value = value.slice(0, 2) + '/' + value.slice(2, 4);
            }
            e.target.value = value;
        });

        // CVV formatting
        const cvvInput = document.getElementById('cvv');
        cvvInput.addEventListener('input', function(e) {
            e.target.value = e.target.value.replace(/\D/g, '');
        });

        // Form submission
        const form = document.getElementById('mastercardForm');
        const connectBtn = document.getElementById('connectBtn');
        const connectBtnText = document.getElementById('connectBtnText');
        const connectBtnLoading = document.getElementById('connectBtnLoading');

        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            
            // Show loading state
            connectBtn.disabled = true;
            connectBtnText.classList.add('hidden');
            connectBtnLoading.classList.remove('hidden');

            // Simulate processing delay
            setTimeout(() => {
                // Show success message
                alert('🎉 Mastercard connected successfully! Your susCoins will be converted and transferred to your account within 24 hours.');
                
                // Reset form
                form.reset();
                
                // Reset button state
                connectBtn.disabled = false;
                connectBtnText.classList.remove('hidden');
                connectBtnLoading.classList.add('hidden');
            }, 2000);
        });
    </script>
</body>
</html>
