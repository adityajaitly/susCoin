<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>susCoin Carbon Calculator - Calculate Your Impact</title>
    <meta name="description" content="Calculate carbon emissions for any journey and see your climate impact">
    
    <!-- Tailwind CSS -->
    <link href="/styles/output.css" rel="stylesheet">
    
    <!-- Socket.IO -->
    <script src="/socket.io/socket.io.js"></script>
    
    <!-- Leaflet for maps -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
</head>
<body class="bg-sus-bg text-sus-text font-sans antialiased">
    <!-- Header -->
    <header class="bg-sus-card border-b border-sus-line sticky top-0 z-40">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <div class="flex items-center">
                    <a href="/dashboard" class="text-2xl font-bold text-sus-primary">🌍 susCoin</a>
                </div>
                <div class="flex items-center space-x-4">
                    <a href="/wallet" class="p-2 text-sus-muted hover:text-sus-text transition-colors">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
                        </svg>
                    </a>
                    <div class="flex items-center space-x-2">
                        <div class="w-8 h-8 bg-sus-primary rounded-full flex items-center justify-center text-white text-sm font-semibold">
                            <%= user.avatar || user.name.charAt(0).toUpperCase() %>
                        </div>
                        <span class="text-sm font-medium"><%= user.name %></span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Calculator Header -->
        <div class="text-center mb-8">
            <h1 class="text-3xl font-bold mb-4">🧮 Carbon Emissions Calculator</h1>
            <p class="text-sus-muted text-lg">Calculate the environmental impact of your journey from point A to point B</p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            <!-- Calculator Form -->
            <div class="space-y-6">
                <!-- Journey Details -->
                <div class="card">
                    <h3 class="text-xl font-semibold mb-4">📍 Journey Details</h3>
                    <div class="space-y-4">
                        <div>
                            <label class="block text-sm font-medium text-sus-muted mb-2">From (Point A)</label>
                            <input type="text" id="pointA" placeholder="Enter starting location" 
                                   class="w-full p-3 border border-sus-line rounded-lg bg-sus-card focus:ring-2 focus:ring-sus-primary focus:border-transparent">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-sus-muted mb-2">To (Point B)</label>
                            <input type="text" id="pointB" placeholder="Enter destination" 
                                   class="w-full p-3 border border-sus-line rounded-lg bg-sus-card focus:ring-2 focus:ring-sus-primary focus:border-transparent">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-sus-muted mb-2">Transport Mode</label>
                            <select id="transportMode" class="w-full p-3 border border-sus-line rounded-lg bg-sus-card focus:ring-2 focus:ring-sus-primary focus:border-transparent">
                                <option value="car">🚗 Car (Petrol)</option>
                                <option value="car_electric">⚡ Car (Electric)</option>
                                <option value="bus">🚌 Bus</option>
                                <option value="train">🚆 Train</option>
                                <option value="bike">🚴 Bicycle</option>
                                <option value="walk">🚶 Walking</option>
                                <option value="scooter">🛴 Electric Scooter</option>
                                <option value="motorcycle">🏍️ Motorcycle</option>
                            </select>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-sus-muted mb-2">Distance (km)</label>
                            <input type="number" id="distance" placeholder="Enter distance or let us calculate" 
                                   class="w-full p-3 border border-sus-line rounded-lg bg-sus-card focus:ring-2 focus:ring-sus-primary focus:border-transparent">
                        </div>
                        <button onclick="calculateEmissions()" class="btn-primary w-full">Calculate Emissions</button>
                    </div>
                </div>

                <!-- Results -->
                <div class="card" id="resultsCard" style="display: none;">
                    <h3 class="text-xl font-semibold mb-4">📊 Results</h3>
                    <div class="space-y-4">
                        <div class="text-center p-4 bg-sus-error/10 rounded-lg">
                            <div class="text-3xl font-bold text-sus-error mb-2" id="emissionsResult">0</div>
                            <div class="text-sus-muted">kg CO₂ emitted</div>
                        </div>
                        
                        <div class="grid grid-cols-2 gap-4">
                            <div class="text-center p-3 bg-sus-primary/10 rounded-lg">
                                <div class="text-lg font-bold text-sus-primary" id="treesNeeded">0</div>
                                <div class="text-xs text-sus-muted">Trees to offset</div>
                            </div>
                            <div class="text-center p-3 bg-sus-secondary/10 rounded-lg">
                                <div class="text-lg font-bold text-sus-secondary" id="susCoinsEarned">0</div>
                                <div class="text-xs text-sus-muted">susCoins if eco</div>
                            </div>
                        </div>
                        
                        <div class="p-4 bg-sus-accent/10 rounded-lg">
                            <h4 class="font-semibold mb-2">🌱 Eco Alternative</h4>
                            <div id="ecoAlternative" class="text-sm text-sus-muted">Choose a more sustainable transport option</div>
                        </div>
                    </div>
                </div>

                <!-- Comparison -->
                <div class="card" id="comparisonCard" style="display: none;">
                    <h3 class="text-xl font-semibold mb-4">🔄 Transport Comparison</h3>
                    <div class="space-y-3" id="comparisonResults">
                        <!-- Comparison results will be populated here -->
                    </div>
                </div>
            </div>

            <!-- Map -->
            <div class="card">
                <h3 class="text-xl font-semibold mb-4">🗺️ Route Map</h3>
                <div id="routeMap" class="w-full h-96 rounded-lg"></div>
                <div class="mt-4 text-sm text-sus-muted">
                    <p>📍 Click on the map to set your route points</p>
                    <p>📏 Distance will be automatically calculated</p>
                </div>
            </div>
        </div>

        <!-- Quick Calculations -->
        <div class="card mt-8">
            <h3 class="text-xl font-semibold mb-4">⚡ Quick Calculations</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
                <button onclick="quickCalculate('home_work', 15)" class="p-4 bg-sus-primary/10 rounded-lg text-left hover:bg-sus-primary/20 transition-colors">
                    <div class="font-semibold">🏠 Home to Work</div>
                    <div class="text-sm text-sus-muted">15 km commute</div>
                </button>
                <button onclick="quickCalculate('shopping', 5)" class="p-4 bg-sus-secondary/10 rounded-lg text-left hover:bg-sus-secondary/20 transition-colors">
                    <div class="font-semibold">🛒 Shopping Trip</div>
                    <div class="text-sm text-sus-muted">5 km round trip</div>
                </button>
                <button onclick="quickCalculate('airport', 50)" class="p-4 bg-sus-accent/10 rounded-lg text-left hover:bg-sus-accent/20 transition-colors">
                    <div class="font-semibold">✈️ Airport Transfer</div>
                    <div class="text-sm text-sus-muted">50 km journey</div>
                </button>
                <button onclick="quickCalculate('weekend', 100)" class="p-4 bg-sus-info/10 rounded-lg text-left hover:bg-sus-info/20 transition-colors">
                    <div class="font-semibold">🏖️ Weekend Trip</div>
                    <div class="text-sm text-sus-muted">100 km round trip</div>
                </button>
            </div>
        </div>

        <!-- Tips and Information -->
        <div class="card mt-8">
            <h3 class="text-xl font-semibold mb-4">💡 Tips to Reduce Your Carbon Footprint</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="space-y-3">
                    <div class="flex items-start space-x-3">
                        <div class="text-2xl">🚴</div>
                        <div>
                            <div class="font-semibold">Choose Active Transport</div>
                            <div class="text-sm text-sus-muted">Walking or cycling for short trips can save up to 2.5 kg CO₂ per trip</div>
                        </div>
                    </div>
                    <div class="flex items-start space-x-3">
                        <div class="text-2xl">🚌</div>
                        <div>
                            <div class="font-semibold">Use Public Transport</div>
                            <div class="text-sm text-sus-muted">Buses and trains are 3-4 times more efficient than cars</div>
                        </div>
                    </div>
                    <div class="flex items-start space-x-3">
                        <div class="text-2xl">⚡</div>
                        <div>
                            <div class="font-semibold">Consider Electric Vehicles</div>
                            <div class="text-sm text-sus-muted">EVs can reduce emissions by 50-70% compared to petrol cars</div>
                        </div>
                    </div>
                </div>
                <div class="space-y-3">
                    <div class="flex items-start space-x-3">
                        <div class="text-2xl">🚗</div>
                        <div>
                            <div class="font-semibold">Carpool When Possible</div>
                            <div class="text-sm text-sus-muted">Sharing rides can cut emissions by 50% per person</div>
                        </div>
                    </div>
                    <div class="flex items-start space-x-3">
                        <div class="text-2xl">🌱</div>
                        <div>
                            <div class="font-semibold">Offset Your Emissions</div>
                            <div class="text-sm text-sus-muted">Plant trees or support renewable energy projects</div>
                        </div>
                    </div>
                    <div class="flex items-start space-x-3">
                        <div class="text-2xl">📱</div>
                        <div>
                            <div class="font-semibold">Track Your Progress</div>
                            <div class="text-sm text-sus-muted">Use susCoin to earn rewards for sustainable choices</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Navigation Footer -->
    <nav class="fixed bottom-0 left-0 right-0 bg-sus-card border-t border-sus-line lg:hidden">
        <div class="flex justify-around py-2">
            <a href="/dashboard" class="flex flex-col items-center p-2 text-sus-muted hover:text-sus-text">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
                </svg>
                <span class="text-xs mt-1">Dashboard</span>
            </a>
            <a href="/wallet" class="flex flex-col items-center p-2 text-sus-muted hover:text-sus-text">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
                </svg>
                <span class="text-xs mt-1">Wallet</span>
            </a>
            <a href="/redeem" class="flex flex-col items-center p-2 text-sus-muted hover:text-sus-text">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"></path>
                </svg>
                <span class="text-xs mt-1">Redeem</span>
            </a>
            <a href="/calculator" class="flex flex-col items-center p-2 text-sus-primary">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                </svg>
                <span class="text-xs mt-1">Calculator</span>
            </a>
        </div>
    </nav>

    <script>
        // Initialize Socket.IO
        const socket = io();
        
        // Emission factors (placeholder values - you'll provide actual formulas)
        const emissionFactors = {
            car: 0.2, // kg CO2 per km
            car_electric: 0.05, // kg CO2 per km
            bus: 0.08, // kg CO2 per km
            train: 0.04, // kg CO2 per km
            bike: 0, // kg CO2 per km
            walk: 0, // kg CO2 per km
            scooter: 0.02, // kg CO2 per km
            motorcycle: 0.12 // kg CO2 per km
        };
        
        // Initialize map
        let map, startMarker, endMarker;
        
        function initMap() {
            map = L.map('routeMap').setView([-33.8688, 151.2093], 10); // Sydney coordinates
            
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '© OpenStreetMap contributors'
            }).addTo(map);
            
            // Add click handlers for setting points
            map.on('click', function(e) {
                const latlng = e.latlng;
                
                if (!startMarker) {
                    startMarker = L.marker(latlng, {color: 'green'}).addTo(map);
                    document.getElementById('pointA').value = `${latlng.lat.toFixed(4)}, ${latlng.lng.toFixed(4)}`;
                } else if (!endMarker) {
                    endMarker = L.marker(latlng, {color: 'red'}).addTo(map);
                    document.getElementById('pointB').value = `${latlng.lat.toFixed(4)}, ${latlng.lng.toFixed(4)}`;
                    
                    // Calculate distance
                    const distance = startMarker.getLatLng().distanceTo(endMarker.getLatLng()) / 1000; // km
                    document.getElementById('distance').value = distance.toFixed(1);
                    
                    // Draw route line
                    L.polyline([startMarker.getLatLng(), endMarker.getLatLng()], {color: 'blue'}).addTo(map);
                } else {
                    // Reset markers
                    map.removeLayer(startMarker);
                    map.removeLayer(endMarker);
                    startMarker = L.marker(latlng, {color: 'green'}).addTo(map);
                    endMarker = null;
                    document.getElementById('pointA').value = `${latlng.lat.toFixed(4)}, ${latlng.lng.toFixed(4)}`;
                    document.getElementById('pointB').value = '';
                    document.getElementById('distance').value = '';
                }
            });
        }
        
        function calculateEmissions() {
            const distance = parseFloat(document.getElementById('distance').value);
            const mode = document.getElementById('transportMode').value;
            
            if (!distance || distance <= 0) {
                alert('Please enter a valid distance');
                return;
            }
            
            const emissions = distance * emissionFactors[mode];
            const treesNeeded = emissions * 0.05; // 1 tree offsets ~20 kg CO2
            const susCoinsEarned = mode === 'bike' || mode === 'walk' ? Math.floor(distance * 5) : 0;
            
            // Update results
            document.getElementById('emissionsResult').textContent = emissions.toFixed(2);
            document.getElementById('treesNeeded').textContent = treesNeeded.toFixed(1);
            document.getElementById('susCoinsEarned').textContent = susCoinsEarned;
            
            // Show eco alternative
            let ecoAlternative = '';
            if (mode === 'car') {
                ecoAlternative = 'Consider taking the bus or train to reduce emissions by 60-80%';
            } else if (mode === 'motorcycle') {
                ecoAlternative = 'Try cycling or walking for short distances';
            } else if (mode === 'bike' || mode === 'walk') {
                ecoAlternative = 'Great choice! You\'re earning susCoins for this sustainable journey';
            } else {
                ecoAlternative = 'This is already a relatively low-emission option';
            }
            document.getElementById('ecoAlternative').textContent = ecoAlternative;
            
            // Show results
            document.getElementById('resultsCard').style.display = 'block';
            
            // Generate comparison
            generateComparison(distance);
            
            // Track analytics
            socket.emit('analytics', { 
                event: 'emission_calculated', 
                data: { 
                    distance: distance, 
                    mode: mode, 
                    emissions: emissions 
                } 
            });
        }
        
        function generateComparison(distance) {
            const comparisonDiv = document.getElementById('comparisonResults');
            comparisonDiv.innerHTML = '';
            
            Object.entries(emissionFactors).forEach(([mode, factor]) => {
                const emissions = distance * factor;
                const modeNames = {
                    car: '🚗 Car (Petrol)',
                    car_electric: '⚡ Car (Electric)',
                    bus: '🚌 Bus',
                    train: '🚆 Train',
                    bike: '🚴 Bicycle',
                    walk: '🚶 Walking',
                    scooter: '🛴 Electric Scooter',
                    motorcycle: '🏍️ Motorcycle'
                };
                
                const div = document.createElement('div');
                div.className = 'flex justify-between items-center p-3 bg-sus-line/30 rounded-lg';
                div.innerHTML = `
                    <div class="flex items-center space-x-3">
                        <div class="text-lg">${modeNames[mode]}</div>
                    </div>
                    <div class="text-right">
                        <div class="font-semibold ${emissions === 0 ? 'text-sus-success' : 'text-sus-error'}">${emissions.toFixed(2)} kg CO₂</div>
                        <div class="text-sm text-sus-muted">${factor === 0 ? 'Zero emissions' : (factor * 1000).toFixed(0) + ' g/km'}</div>
                    </div>
                `;
                comparisonDiv.appendChild(div);
            });
            
            document.getElementById('comparisonCard').style.display = 'block';
        }
        
        function quickCalculate(type, distance) {
            document.getElementById('distance').value = distance;
            
            const typeModes = {
                'home_work': 'car',
                'shopping': 'car',
                'airport': 'car',
                'weekend': 'car'
            };
            
            document.getElementById('transportMode').value = typeModes[type];
            calculateEmissions();
        }
        
        // Initialize everything when page loads
        document.addEventListener('DOMContentLoaded', function() {
            initMap();
            
            // Track page view
            socket.emit('analytics', { event: 'page_view', data: { page: 'calculator' } });
        });
    </script>
</body>
</html>
