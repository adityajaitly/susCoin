    <script>
        // Initialize Socket.IO
        const socket = io();
        
        // Theme toggle
        const themeToggle = document.getElementById('themeToggle');
        const html = document.documentElement;
        
        // Check for saved theme preference or default to light
        const savedTheme = localStorage.getItem('theme') || 'light';
        
        // Apply theme immediately to prevent flash
        if (savedTheme === 'dark') {
            html.classList.add('dark');
        } else {
            html.classList.remove('dark');
        }
        
        themeToggle.textContent = savedTheme === 'dark' ? '‚òÄÔ∏è' : 'üåô';
        

        
        themeToggle.addEventListener('click', () => {
            const isDark = html.classList.toggle('dark');
            localStorage.setItem('theme', isDark ? 'dark' : 'light');
            themeToggle.textContent = isDark ? '‚òÄÔ∏è' : 'üåô';
            
            // Add visual feedback
            themeToggle.style.transform = 'scale(1.1)';
            setTimeout(() => {
                themeToggle.style.transform = 'scale(1)';
            }, 150);
            

        });
        
        // Real-time data updates
        socket.on('liveData', (data) => {
            document.getElementById('co2Counter').textContent = data.co2Saved.toFixed(1);
            document.getElementById('workersCounter').textContent = data.activeWorkers;
            document.getElementById('rewardsCounter').textContent = data.rewardsRedeemed;
        });
        
        // Demo QR scan
        function scanDemoQR() {
            trackEvent('demo_scan');
            socket.emit('demoScan');
            
            // Show confetti
            confetti({
                particleCount: 100,
                spread: 70,
                origin: { y: 0.6 }
            });
            
            showToast('üéâ You earned 5 credits! Welcome to susCoin!');
        }
        
        // Demo reward received
        socket.on('demoReward', (reward) => {
            showToast(`üéâ ${reward.message}`);
        });
        
        // Leaderboard switching
        function switchLeaderboard(type) {
            trackEvent('leaderboard_filter', { type });
            // Update active tab
            document.querySelectorAll('[onclick^="switchLeaderboard"]').forEach(btn => {
                btn.className = 'px-4 py-2 rounded-md text-sus-muted hover:text-sus-text transition-colors';
            });
            event.target.className = 'px-4 py-2 rounded-md bg-sus-primary text-white font-medium';
            
            // In a real app, you'd fetch and update the leaderboard data here
        }
        
        // Map updates
        function updateMap(type, value) {
            trackEvent('map_filter', { type, value });
            
            // Update map based on filter type
            if (type === 'view') {
                // Update the map view based on selected metric
                updateMapView(value);
            } else if (type === 'time') {
                // Update time period (could load different year data)
                updateTimePeriod(value);
            } else if (type === 'gigType') {
                // Update gig type filter
                updateGigTypeFilter(value);
            }
        }
        
        // Update map view based on selected metric
        function updateMapView(viewType) {
            const map = window.impactMap;
            if (!map) return;
            
            // Remove existing heatmap layer if it exists
            if (window.heatmapLayer) {
                map.removeLayer(window.heatmapLayer);
            }
            
            // Reload data with new view type
            fetch('/data/emission-heatmap.json')
                .then(response => response.json())
                .then(data => {
                    let heatmapData;
                    
                    switch(viewType) {
                        case 'co2':
                            // Show CO2 emissions (default)
                            heatmapData = data.map(item => [item.lat, item.lng, item.intensity]);
                            break;
                        case 'participation':
                            // Show participation rate (mock data)
                            heatmapData = data.map(item => [item.lat, item.lng, Math.random() * 0.8 + 0.2]);
                            break;
                        case 'equity':
                            // Show equity index (mock data)
                            heatmapData = data.map(item => [item.lat, item.lng, Math.random() * 0.6 + 0.4]);
                            break;
                        default:
                            heatmapData = data.map(item => [item.lat, item.lng, item.intensity]);
                    }
                    
                    // Add new heatmap layer
                    window.heatmapLayer = L.heatLayer(heatmapData, {
                        radius: 50,
                        blur: 30,
                        maxZoom: 10,
                        gradient: {
                            0.0: '#00ff00',
                            0.3: '#ffff00',
                            0.6: '#ff8000',
                            1.0: '#ff0000'
                        }
                    }).addTo(map);
                });
        }
        
        // Update time period
        function updateTimePeriod(timePeriod) {
            // In a real app, this would load data for different time periods
            console.log('Time period updated:', timePeriod);
        }
        
        // Update gig type filter
        function updateGigTypeFilter(gigType) {
            // In a real app, this would filter data by gig type
            console.log('Gig type filter updated:', gigType);
        }
        
        // Impact calculator
        function updateCalculator() {
            const riders = parseInt(document.getElementById('riderSlider').value);
            document.getElementById('riderCount').textContent = riders;
            
            const co2PerRider = 0.024; // kg CO2 saved per rider per day
            const treesPerKg = 0.05; // trees equivalent per kg CO2
            const congestionHours = 0.156; // hours avoided per rider per day
            
            document.getElementById('co2Result').textContent = (riders * co2PerRider * 30).toFixed(1);
            document.getElementById('treesResult').textContent = (riders * co2PerRider * 30 * treesPerKg).toFixed(2);
            document.getElementById('congestionResult').textContent = (riders * congestionHours * 30).toFixed(1);
        }
        
        // Invite crew
        function inviteCrew() {
            const riders = document.getElementById('riderCount').textContent;
            const shareText = `Join me on susCoin! If ${riders} of us bike one delivery per day, we could save ${document.getElementById('co2Result').textContent}kg CO2 per month! üåç`;
            
            if (navigator.share) {
                navigator.share({
                    title: 'Join susCoin',
                    text: shareText,
                    url: window.location.href
                });
            } else {
                // Fallback to copying to clipboard
                navigator.clipboard.writeText(shareText);
                showToast('üìã Share text copied to clipboard!');
            }
        }
        
        // Form handlers
        function handleSignup(event, type) {
            event.preventDefault();
            const email = event.target.querySelector('input[type="email"]').value;
            
            fetch('/api/signup', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ email, type })
            })
            .then(response => response.json())
            .then(data => {
                showToast(data.message);
                trackEvent('signup_start', { type });
            });
        }
        
        function handlePilotRequest(event) {
            event.preventDefault();
            const formData = new FormData(event.target);
            const data = Object.fromEntries(formData);
            
            fetch('/api/pilot-request', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            })
            .then(response => response.json())
            .then(data => {
                showToast(data.message);
                trackEvent('pilot_request_submit');
            });
        }
        
        // Toast notification
        function showToast(message) {
            const toast = document.getElementById('toast');
            const toastMessage = document.getElementById('toastMessage');
            toastMessage.textContent = message;
            toast.classList.remove('hidden');
            
            setTimeout(() => {
                toast.classList.add('hidden');
            }, 3000);
        }
        
        // Analytics tracking
        function trackEvent(eventName, data = {}) {
            socket.emit('analytics', { event: eventName, data, timestamp: Date.now() });
        }
        
        // Initialize map
        function initMap() {
            console.log('Initializing map...');
            
            // Check if Leaflet is available
            if (typeof L === 'undefined') {
                console.error('Leaflet is not loaded!');
                showMapError('Leaflet library not loaded');
                return;
            }
            
            console.log('Leaflet is available:', L);
            
            try {
                // Center on Australia
                const map = L.map('impactMap').setView([-25.2744, 133.7751], 4);
                window.impactMap = map; // Store map reference globally
                
                console.log('Map created successfully');
                
                L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                    attribution: '¬© OpenStreetMap contributors'
                }).addTo(map);
                
                console.log('Tile layer added');
                
                // Test basic map functionality first
                L.marker([-25.2744, 133.7751]).addTo(map)
                    .bindPopup('Australia - Map is working!')
                    .openPopup();
                
                console.log('Test marker added');
                
                // Load emission data and create heatmap
                fetch('/data/emission-heatmap.json')
                    .then(response => {
                        console.log('Data response:', response);
                        return response.json();
                    })
                    .then(data => {
                        console.log('Emission data loaded:', data);
                        
                        // Hide loading indicator
                        const loadingEl = document.getElementById('mapLoading');
                        if (loadingEl) {
                            loadingEl.style.display = 'none';
                        }
                        
                        // Create heatmap data points
                        const heatmapData = data.map(item => [
                            item.lat,
                            item.lng,
                            item.intensity
                        ]);
                        
                        console.log('Heatmap data prepared:', heatmapData);
                        
                        // Add heatmap layer
                        window.heatmapLayer = L.heatLayer(heatmapData, {
                            radius: 50,
                            blur: 30,
                            maxZoom: 10,
                            gradient: {
                                0.0: '#00ff00',   // Green for low emissions
                                0.3: '#ffff00',   // Yellow for medium
                                0.6: '#ff8000',   // Orange for high
                                1.0: '#ff0000'    // Red for very high
                            }
                        }).addTo(map);
                        
                        console.log('Heatmap layer added');
                        
                        // Add state markers with popups
                        data.forEach(state => {
                            const color = state.intensity > 0.6 ? '#dc2626' : 
                                        state.intensity > 0.4 ? '#ea580c' : 
                                        state.intensity > 0.2 ? '#ca8a04' : '#16a34a';
                            
                            L.circleMarker([state.lat, state.lng], {
                                radius: Math.max(8, state.intensity * 20),
                                fillColor: color,
                                color: color,
                                weight: 2,
                                opacity: 1,
                                fillOpacity: 0.8
                            }).addTo(map).bindPopup(`
                                <div class="text-center">
                                    <strong>${state.state}</strong><br>
                                    <span class="text-red-600 font-semibold">${state.emissionsFormatted}</span><br>
                                    <small class="text-gray-600">2020 Emissions</small>
                                </popup>
                            `);
                        });
                        
                        console.log('Map initialization complete');
                    })
                    .catch(error => {
                        console.error('Error loading emission data:', error);
                        
                        // Hide loading indicator
                        const loadingEl = document.getElementById('mapLoading');
                        if (loadingEl) {
                            loadingEl.style.display = 'none';
                        }
                        
                        // Show error message
                        const mapContainer = document.getElementById('impactMap');
                        mapContainer.innerHTML = `
                            <div class="flex items-center justify-center h-full">
                                <div class="text-center text-sus-error">
                                    <div class="text-2xl mb-2">‚ùå</div>
                                    <p>Failed to load emission data</p>
                                    <p class="text-sm text-sus-muted">Check console for details</p>
                                </div>
                            </div>
                        `;
                        
                        // Fallback to sample data
                        const sampleData = [
                            { lat: -33.8688, lng: 151.2093, title: 'Sydney', impact: 847 },
                            { lat: -37.8136, lng: 144.9631, title: 'Melbourne', impact: 723 },
                            { lat: -27.4698, lng: 153.0251, title: 'Brisbane', impact: 689 }
                        ];
                        
                        sampleData.forEach(point => {
                            L.circleMarker([point.lat, point.lng], {
                                radius: Math.sqrt(point.impact) / 10,
                                fillColor: '#065F46',
                                color: '#065F46',
                                weight: 2,
                                opacity: 1,
                                fillOpacity: 0.7
                            }).addTo(map).bindPopup(`${point.title}<br>${point.impact} credits`);
                        });
                    });
            } catch (error) {
                console.error('Error initializing map:', error);
                
                // Hide loading indicator
                const loadingEl = document.getElementById('mapLoading');
                if (loadingEl) {
                    loadingEl.style.display = 'none';
                }
                
                // Show error message
                const mapContainer = document.getElementById('impactMap');
                mapContainer.innerHTML = `
                    <div class="flex items-center justify-center h-full">
                        <div class="text-center text-sus-error">
                            <div class="text-2xl mb-2">‚ùå</div>
                            <p>Failed to initialize map</p>
                            <p class="text-sm text-sus-muted">Check console for details</p>
                        </div>
                    </div>
                `;
            }
        }
        
        // Helper function to show map errors
        function showMapError(message) {
            const mapContainer = document.getElementById('impactMap');
            if (mapContainer) {
                mapContainer.innerHTML = `
                    <div class="flex items-center justify-center h-full">
                        <div class="text-center text-sus-error">
                            <div class="text-2xl mb-2">‚ùå</div>
                            <p>${message}</p>
                            <p class="text-sm text-sus-muted">Check console for details</p>
                        </div>
                    </div>
                `;
            }
        }
        
        // Logout function
        async function logout() {
            try {
                const response = await fetch('/api/logout', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                });
                
                if (response.ok) {
                    window.location.href = '/';
                }
            } catch (error) {
                console.error('Logout error:', error);
            }
        }
        
        // Initialize everything when page loads
        document.addEventListener('DOMContentLoaded', function() {
            // Add a small delay to ensure everything is loaded
            setTimeout(() => {
                console.log('DOM loaded, initializing map...');
                initMap();
                updateCalculator();
                
                // Track page view
                trackEvent('page_view', { page: 'home' });
            }, 100);
        });
    </script>
