<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <meta name="description" content="Login to susCoin - Turn gig work into citywide carbon wins">
    
    <!-- Tailwind CSS -->
    <link href="/styles/output.css" rel="stylesheet">
    
    <!-- Confetti library -->
    <script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.6.0/dist/confetti.browser.min.js"></script>
</head>
<body class="bg-sus-bg text-sus-text font-sans antialiased min-h-screen">
    <!-- Theme Toggle -->
    <button id="themeToggle" class="fixed top-4 right-4 z-50 p-3 bg-sus-card border border-sus-line rounded-lg shadow-lg hover:shadow-xl transition-all duration-200 text-2xl hover:scale-110 cursor-pointer" title="Toggle dark mode">
        üåô
    </button>

    <!-- Navigation -->
    <nav class="fixed top-0 left-0 right-0 z-40 bg-sus-card/80 backdrop-blur-md border-b border-sus-line">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <div class="flex items-center">
                    <a href="/" class="flex items-center">
                        <img src="/images/logo.png" alt="susCoin Logo" class="h-10 w-auto mr-2 logo">
                        <span class="text-2xl font-bold text-sus-primary">susCoin</span>
                    </a>
                </div>
                <div class="hidden md:flex items-center space-x-8">
                    <a href="/" class="text-sus-muted hover:text-sus-text transition-colors">Home</a>
                    <a href="/signup" class="text-sus-muted hover:text-sus-text transition-colors">Sign Up</a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="min-h-screen flex items-center justify-center pt-16 px-4 sm:px-6 lg:px-8">
        <div class="max-w-md w-full space-y-8">
            <!-- Header -->
            <div class="text-center">
                <div class="mx-auto h-16 w-16 bg-sus-primary rounded-full flex items-center justify-center mb-4">
                    <span class="text-2xl">üå±</span>
                </div>
                <h2 class="text-3xl font-bold text-sus-text mb-2">Welcome back</h2>
                <p class="text-sus-muted">Sign in to your susCoin account</p>
            </div>

            <!-- Login Form -->
            <div class="card">
                <form id="loginForm" class="space-y-6">
                    <!-- Email Field -->
                    <div>
                        <label for="email" class="block text-sm font-medium text-sus-text mb-2">
                            Email address
                        </label>
                        <input
                            id="email"
                            name="email"
                            type="email"
                            required
                            class="input-field w-full"
                            placeholder="Enter your email"
                        >
                    </div>

                    <!-- Password Field -->
                    <div>
                        <label for="password" class="block text-sm font-medium text-sus-text mb-2">
                            Password
                        </label>
                        <input
                            id="password"
                            name="password"
                            type="password"
                            required
                            class="input-field w-full"
                            placeholder="Enter your password"
                        >
                    </div>

                    <!-- Remember Me & Forgot Password -->
                    <div class="flex items-center justify-between">
                        <div class="flex items-center">
                            <input
                                id="remember-me"
                                name="remember-me"
                                type="checkbox"
                                class="h-4 w-4 text-sus-primary focus:ring-sus-primary border-sus-line rounded"
                            >
                            <label for="remember-me" class="ml-2 block text-sm text-sus-muted">
                                Remember me
                            </label>
                        </div>
                        <div class="text-sm">
                            <a href="#" class="text-sus-primary hover:text-sus-primary-dark transition-colors">
                                Forgot password?
                            </a>
                        </div>
                    </div>

                    <!-- Submit Button -->
                    <button
                        type="submit"
                        class="btn-primary w-full py-3 text-lg"
                        id="loginBtn"
                    >
                        <span id="loginBtnText">Sign in</span>
                        <span id="loginBtnLoading" class="hidden">
                            <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white inline" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                            </svg>
                            Signing in...
                        </span>
                    </button>
                </form>

                <!-- Divider -->
                <div class="mt-6">
                    <div class="relative">
                        <div class="absolute inset-0 flex items-center">
                            <div class="w-full border-t border-sus-line"></div>
                        </div>
                        <div class="relative flex justify-center text-sm">
                            <span class="px-2 bg-sus-card text-sus-muted">Or continue with</span>
                        </div>
                    </div>
                </div>

                <!-- Social Login Buttons -->
                <div class="mt-6 grid grid-cols-2 gap-3">
                    <button class="btn-secondary w-full py-3">
                        <span class="text-lg mr-2">üîç</span>
                        Google
                    </button>
                    <button class="btn-secondary w-full py-3">
                        <span class="text-lg mr-2">üìò</span>
                        Facebook
                    </button>
                </div>

                <!-- Sign Up Link -->
                <div class="mt-6 text-center">
                    <p class="text-sus-muted">
                        Don't have an account? 
                        <a href="/signup" class="text-sus-primary hover:text-sus-primary-dark transition-colors font-medium">
                            Sign up
                        </a>
                    </p>
                </div>
            </div>

            <!-- Demo Account Info -->
            <div class="card bg-sus-accent/10 border-sus-accent/20">
                <div class="text-center">
                    <h3 class="text-lg font-semibold text-sus-accent mb-2">üéØ Try Demo Account</h3>
                    <p class="text-sm text-sus-muted mb-3">
                        Use our demo account to explore susCoin features
                    </p>
                    <button 
                        onclick="fillDemoCredentials()" 
                        class="btn-accent text-sm px-4 py-2"
                    >
                        Fill Demo Credentials
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Success Message Modal -->
    <div id="successModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 hidden">
        <div class="card max-w-md mx-4 text-center">
            <div class="text-6xl mb-4">üéâ</div>
            <h3 class="text-xl font-bold text-sus-text mb-2">Welcome to susCoin!</h3>
            <p class="text-sus-muted mb-6">You've successfully signed in to your account.</p>
            <button onclick="redirectToDashboard()" class="btn-primary w-full">
                Go to Dashboard
            </button>
        </div>
    </div>

    <!-- Error Message Modal -->
    <div id="errorModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 hidden">
        <div class="card max-w-md mx-4 text-center">
            <div class="text-6xl mb-4">‚ùå</div>
            <h3 class="text-xl font-bold text-sus-text mb-2">Login Failed</h3>
            <p id="errorMessage" class="text-sus-muted mb-6">An error occurred during login.</p>
            <button onclick="closeErrorModal()" class="btn-primary w-full">
                Try Again
            </button>
        </div>
    </div>

    <script>
        // Theme toggle functionality
        const themeToggle = document.getElementById('themeToggle');
        const html = document.documentElement;
        
        // Check for saved theme preference or default to 'light'
        const currentTheme = localStorage.getItem('theme') || 'light';
        html.classList.toggle('dark', currentTheme === 'dark');
        themeToggle.textContent = currentTheme === 'dark' ? '‚òÄÔ∏è' : 'üåô';
        
        themeToggle.addEventListener('click', () => {
            const isDark = html.classList.toggle('dark');
            localStorage.setItem('theme', isDark ? 'dark' : 'light');
            themeToggle.textContent = isDark ? '‚òÄÔ∏è' : 'üåô';
        });

        // Form handling
        const loginForm = document.getElementById('loginForm');
        const loginBtn = document.getElementById('loginBtn');
        const loginBtnText = document.getElementById('loginBtnText');
        const loginBtnLoading = document.getElementById('loginBtnLoading');

        loginForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const formData = new FormData(loginForm);
            const email = formData.get('email');
            const password = formData.get('password');
            const rememberMe = formData.get('remember-me');

            // Show loading state
            loginBtn.disabled = true;
            loginBtnText.classList.add('hidden');
            loginBtnLoading.classList.remove('hidden');

            try {
                console.log('Sending login request:', { email, rememberMe: !!rememberMe });
                
                const response = await fetch('/api/login', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        email,
                        password,
                        rememberMe: !!rememberMe
                    })
                });

                console.log('Response status:', response.status);
                const data = await response.json();
                console.log('Response data:', data);

                if (data.success) {
                    // Show success modal with confetti
                    confetti({
                        particleCount: 100,
                        spread: 70,
                        origin: { y: 0.6 }
                    });
                    
                    document.getElementById('successModal').classList.remove('hidden');
                } else {
                    showError(data.message || 'Login failed. Please try again.');
                }
            } catch (error) {
                console.error('Login error:', error);
                showError('Network error. Please check your connection and try again.');
            } finally {
                // Reset loading state
                loginBtn.disabled = false;
                loginBtnText.classList.remove('hidden');
                loginBtnLoading.classList.add('hidden');
            }
        });

        function showError(message) {
            document.getElementById('errorMessage').textContent = message;
            document.getElementById('errorModal').classList.remove('hidden');
        }

        function closeErrorModal() {
            document.getElementById('errorModal').classList.add('hidden');
        }

        function fillDemoCredentials() {
            document.getElementById('email').value = 'demo@suscoin.com';
            document.getElementById('password').value = 'demo123';
        }

        function redirectToDashboard() {
            window.location.href = '/dashboard';
        }

        // Close modals when clicking outside
        document.getElementById('successModal').addEventListener('click', (e) => {
            if (e.target === e.currentTarget) {
                e.target.classList.add('hidden');
            }
        });

        document.getElementById('errorModal').addEventListener('click', (e) => {
            if (e.target === e.currentTarget) {
                closeErrorModal();
            }
        });
    </script>
</body>
</html>
