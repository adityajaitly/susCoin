<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>susCoin Redeem - Use Your Credits</title>
    <meta name="description" content="Redeem your susCoins for food, coffee, and other rewards">
    
    <!-- Tailwind CSS -->
    <link href="/styles/output.css" rel="stylesheet">
    
    <!-- Socket.IO -->
    <script src="/socket.io/socket.io.js"></script>
</head>
<body class="bg-sus-bg text-sus-text font-sans antialiased">
    <!-- Header -->
    <header class="bg-sus-card border-b border-sus-line sticky top-0 z-40">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <div class="flex items-center">
                    <a href="/dashboard" class="text-2xl font-bold text-sus-primary">üåç susCoin</a>
                </div>
                <div class="flex items-center space-x-4">
                    <a href="/wallet" class="p-2 text-sus-muted hover:text-sus-text transition-colors">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
                        </svg>
                    </a>
                    <div class="flex items-center space-x-2">
                        <div class="w-8 h-8 bg-sus-primary rounded-full flex items-center justify-center text-white text-sm font-semibold">
                            <%= user.avatar || user.name.charAt(0).toUpperCase() %>
                        </div>
                        <span class="text-sm font-medium"><%= user.name %></span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Carbon Impact Summary -->
        <div class="card mb-8">
            <h2 class="text-2xl font-bold mb-6">üå± Your Carbon Impact</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
                <div class="text-center">
                    <div class="text-4xl font-bold text-sus-primary mb-2" id="totalCarbonSaved">
                        <%= user.totalCO2Saved.toFixed(1) %>
                    </div>
                    <div class="text-sus-muted">Total CO‚ÇÇ Saved (kg)</div>
                </div>
                <div class="text-center">
                    <div class="text-4xl font-bold text-sus-secondary mb-2" id="availableCredits">
                        <%= user.walletBalance %>
                    </div>
                    <div class="text-sus-muted">Available susCoins</div>
                </div>
                <div class="text-center">
                    <div class="text-4xl font-bold text-sus-accent mb-2" id="treesEquivalent">
                        <%= (user.totalCO2Saved * 0.05).toFixed(1) %>
                    </div>
                    <div class="text-sus-muted">Trees Equivalent</div>
                </div>
            </div>
        </div>

        <!-- Monthly Breakdown -->
        <div class="card mb-8">
            <h3 class="text-xl font-semibold mb-4">üìä Monthly Earning Breakdown</h3>
            <div class="space-y-4">
                <% user.monthlyBreakdown.forEach(month => { %>
                <div class="flex items-center justify-between p-4 bg-sus-line/30 rounded-lg">
                    <div>
                        <div class="font-semibold"><%= month.month %></div>
                        <div class="text-sm text-sus-muted"><%= month.activities %> activities completed</div>
                    </div>
                    <div class="text-right">
                        <div class="font-semibold text-sus-primary">+<%= month.credits %> susCoins</div>
                        <div class="text-sm text-sus-muted"><%= month.co2.toFixed(1) %> kg CO‚ÇÇ saved</div>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>

        <!-- Redemption Options -->
        <div class="card mb-8">
            <h3 class="text-xl font-semibold mb-4">üéÅ Available Rewards</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <!-- Food Rewards -->
                <div class="space-y-4">
                    <h4 class="font-semibold text-lg">üçï Food & Dining</h4>
                    <div class="space-y-3">
                        <div class="p-4 bg-sus-primary/10 rounded-lg">
                            <div class="flex justify-between items-center mb-2">
                                <div class="font-semibold">Free Coffee</div>
                                <div class="text-sus-primary font-bold">50 susCoins</div>
                            </div>
                            <div class="text-sm text-sus-muted mb-3">Any caf√© in your area</div>
                            <button class="btn-primary w-full" onclick="redeemReward('coffee', 50)">Redeem</button>
                        </div>
                        
                        <div class="p-4 bg-sus-secondary/10 rounded-lg">
                            <div class="flex justify-between items-center mb-2">
                                <div class="font-semibold">Pizza Slice</div>
                                <div class="text-sus-secondary font-bold">100 susCoins</div>
                            </div>
                            <div class="text-sm text-sus-muted mb-3">Partner restaurants</div>
                            <button class="btn-secondary w-full" onclick="redeemReward('pizza', 100)">Redeem</button>
                        </div>
                        
                        <div class="p-4 bg-sus-accent/10 rounded-lg">
                            <div class="flex justify-between items-center mb-2">
                                <div class="font-semibold">Ice Cream</div>
                                <div class="text-sus-accent font-bold">90 susCoins</div>
                            </div>
                            <div class="text-sm text-sus-muted mb-3">Gelato shops</div>
                            <button class="btn-accent w-full" onclick="redeemReward('icecream', 90)">Redeem</button>
                        </div>
                    </div>
                </div>

                <!-- Transport Rewards -->
                <div class="space-y-4">
                    <h4 class="font-semibold text-lg">üöá Transport</h4>
                    <div class="space-y-3">
                        <div class="p-4 bg-sus-info/10 rounded-lg">
                            <div class="flex justify-between items-center mb-2">
                                <div class="font-semibold">Bus Pass (1 Day)</div>
                                <div class="text-sus-info font-bold">200 susCoins</div>
                            </div>
                            <div class="text-sm text-sus-muted mb-3">Unlimited bus travel</div>
                            <button class="bg-sus-info text-white px-4 py-2 rounded-lg w-full hover:opacity-90" onclick="redeemReward('bus_pass', 200)">Redeem</button>
                        </div>
                        
                        <div class="p-4 bg-sus-success/10 rounded-lg">
                            <div class="flex justify-between items-center mb-2">
                                <div class="font-semibold">Bike Share (1 Hour)</div>
                                <div class="text-sus-success font-bold">75 susCoins</div>
                            </div>
                            <div class="text-sm text-sus-muted mb-3">City bike sharing</div>
                            <button class="bg-sus-success text-white px-4 py-2 rounded-lg w-full hover:opacity-90" onclick="redeemReward('bike_share', 75)">Redeem</button>
                        </div>
                    </div>
                </div>

                <!-- Lifestyle Rewards -->
                <div class="space-y-4">
                    <h4 class="font-semibold text-lg">üå± Lifestyle</h4>
                    <div class="space-y-3">
                        <div class="p-4 bg-sus-warning/10 rounded-lg">
                            <div class="flex justify-between items-center mb-2">
                                <div class="font-semibold">Plant a Tree</div>
                                <div class="text-sus-warning font-bold">300 susCoins</div>
                            </div>
                            <div class="text-sm text-sus-muted mb-3">Local tree planting</div>
                            <button class="bg-sus-warning text-sus-text px-4 py-2 rounded-lg w-full hover:opacity-90" onclick="redeemReward('plant_tree', 300)">Redeem</button>
                        </div>
                        
                        <div class="p-4 bg-sus-error/10 rounded-lg">
                            <div class="flex justify-between items-center mb-2">
                                <div class="font-semibold">Carbon Offset</div>
                                <div class="text-sus-error font-bold">500 susCoins</div>
                            </div>
                            <div class="text-sm text-sus-muted mb-3">Offset 1 ton CO‚ÇÇ</div>
                            <button class="bg-sus-error text-white px-4 py-2 rounded-lg w-full hover:opacity-90" onclick="redeemReward('carbon_offset', 500)">Redeem</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Progress to Next Reward -->
        <div class="card mb-8">
            <h3 class="text-xl font-semibold mb-4">üéØ Progress to Next Reward</h3>
            <div class="space-y-4">
                <div class="p-4 bg-sus-accent/10 rounded-lg">
                    <div class="flex justify-between items-center mb-2">
                        <div class="font-semibold">Free Ice Cream</div>
                        <div class="text-sus-accent font-bold">90/100 susCoins</div>
                    </div>
                    <div class="bg-sus-line rounded-full h-3 mb-2">
                        <div class="bg-sus-accent h-3 rounded-full" style="width: 90%"></div>
                    </div>
                    <div class="text-sm text-sus-muted">Only 10 more susCoins to unlock!</div>
                </div>
                
                <div class="p-4 bg-sus-primary/10 rounded-lg">
                    <div class="flex justify-between items-center mb-2">
                        <div class="font-semibold">Bus Pass (1 Day)</div>
                        <div class="text-sus-primary font-bold">200/200 susCoins</div>
                    </div>
                    <div class="bg-sus-line rounded-full h-3 mb-2">
                        <div class="bg-sus-primary h-3 rounded-full" style="width: 100%"></div>
                    </div>
                    <div class="text-sm text-sus-muted">Ready to redeem! üéâ</div>
                </div>
            </div>
        </div>

        <!-- Redemption History -->
        <div class="card">
            <h3 class="text-xl font-semibold mb-4">üìã Recent Redemptions</h3>
            <div class="space-y-3">
                <% user.redemptionHistory.forEach(redemption => { %>
                <div class="flex items-center justify-between p-4 bg-sus-line/30 rounded-lg">
                    <div class="flex items-center space-x-3">
                        <div class="text-xl"><%= redemption.icon %></div>
                        <div>
                            <div class="font-medium"><%= redemption.reward %></div>
                            <div class="text-sm text-sus-muted"><%= redemption.date %></div>
                        </div>
                    </div>
                    <div class="text-right">
                        <div class="font-semibold text-sus-secondary">-<%= redemption.cost %> susCoins</div>
                        <div class="text-sm text-sus-muted"><%= redemption.status %></div>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
    </main>

    <!-- Navigation Footer -->
    <nav class="fixed bottom-0 left-0 right-0 bg-sus-card border-t border-sus-line lg:hidden">
        <div class="flex justify-around py-2">
            <a href="/dashboard" class="flex flex-col items-center p-2 text-sus-muted hover:text-sus-text">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
                </svg>
                <span class="text-xs mt-1">Dashboard</span>
            </a>
            <a href="/wallet" class="flex flex-col items-center p-2 text-sus-muted hover:text-sus-text">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
                </svg>
                <span class="text-xs mt-1">Wallet</span>
            </a>
            <a href="/redeem" class="flex flex-col items-center p-2 text-sus-primary">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"></path>
                </svg>
                <span class="text-xs mt-1">Redeem</span>
            </a>
            <a href="/calculator" class="flex flex-col items-center p-2 text-sus-muted hover:text-sus-text">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                </svg>
                <span class="text-xs mt-1">Calculator</span>
            </a>
        </div>
    </nav>

    <!-- Redemption Modal -->
    <div id="redemptionModal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50 flex items-center justify-center">
        <div class="bg-sus-card rounded-lg p-6 max-w-md w-full mx-4">
            <h3 class="text-xl font-semibold mb-4">Confirm Redemption</h3>
            <p class="text-sus-muted mb-6" id="modalMessage"></p>
            <div class="flex space-x-4">
                <button class="btn-secondary flex-1" onclick="closeModal()">Cancel</button>
                <button class="btn-primary flex-1" onclick="confirmRedemption()">Confirm</button>
            </div>
        </div>
    </div>

    <script>
        // Initialize Socket.IO
        const socket = io();
        
        let currentRedemption = null;
        
        function redeemReward(rewardType, cost) {
            const availableCredits = <%= user.walletBalance %>;
            
            if (availableCredits < cost) {
                alert('Not enough susCoins! You need ' + cost + ' susCoins but have ' + availableCredits);
                return;
            }
            
            currentRedemption = { type: rewardType, cost: cost };
            const modal = document.getElementById('redemptionModal');
            const message = document.getElementById('modalMessage');
            
            const rewardNames = {
                'coffee': 'Free Coffee',
                'pizza': 'Pizza Slice',
                'icecream': 'Ice Cream',
                'bus_pass': 'Bus Pass (1 Day)',
                'bike_share': 'Bike Share (1 Hour)',
                'plant_tree': 'Plant a Tree',
                'carbon_offset': 'Carbon Offset'
            };
            
            message.textContent = `Redeem ${rewardNames[rewardType]} for ${cost} susCoins?`;
            modal.classList.remove('hidden');
        }
        
        function closeModal() {
            document.getElementById('redemptionModal').classList.add('hidden');
            currentRedemption = null;
        }
        
        function confirmRedemption() {
            if (!currentRedemption) return;
            
            socket.emit('redeemReward', currentRedemption);
            closeModal();
            
            // Show success message
            alert('Redemption successful! Check your email for details.');
            
            // Track analytics
            socket.emit('analytics', { 
                event: 'reward_redeemed', 
                data: { 
                    reward: currentRedemption.type, 
                    cost: currentRedemption.cost 
                } 
            });
        }
        
        // Real-time updates
        socket.on('redemptionUpdate', (data) => {
            document.getElementById('availableCredits').textContent = data.newBalance;
        });

        // Track page view
        socket.emit('analytics', { event: 'page_view', data: { page: 'redeem' } });
    </script>
</body>
</html>
