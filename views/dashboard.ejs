<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>susCoin Dashboard - Your Climate Impact</title>
    <meta name="description" content="Track your carbon savings, earnings, and climate impact on susCoin">
    
    <!-- Tailwind CSS -->
    <link href="/styles/output.css" rel="stylesheet">
    
    <!-- Socket.IO -->
    <script src="/socket.io/socket.io.js"></script>
    
    <!-- Chart.js for visualizations -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body class="bg-sus-bg text-sus-text font-sans antialiased">
    <!-- Header -->
    <header class="bg-sus-card border-b border-sus-line sticky top-0 z-40">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <div class="flex items-center">
                    <h1 class="text-2xl font-bold text-sus-primary">üåç susCoin</h1>
                </div>
                <div class="flex items-center space-x-4">
                    <a href="/wallet" class="p-2 text-sus-muted hover:text-sus-text transition-colors">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
                        </svg>
                    </a>
                    <div class="flex items-center space-x-2">
                        <div class="w-8 h-8 bg-sus-primary rounded-full flex items-center justify-center text-white text-sm font-semibold">
                            <%= user.avatar || user.name.charAt(0).toUpperCase() %>
                        </div>
                        <span class="text-sm font-medium"><%= user.name %></span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Welcome Section -->
        <div class="mb-8">
            <h2 class="text-3xl font-bold text-sus-text mb-2">Welcome back, <%= user.name %>!</h2>
            <p class="text-sus-muted">Track your climate impact and earnings</p>
        </div>

        <!-- CO2 Savings Overview -->
        <div class="card mb-8">
            <h3 class="text-xl font-semibold mb-4">üå± Your Carbon Impact</h3>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <div class="text-center">
                    <div class="text-4xl font-bold text-sus-primary mb-2" id="totalCO2">
                        <%= user.totalCO2Saved.toFixed(1) %>
                    </div>
                    <div class="text-sus-muted">Total CO‚ÇÇ Saved (kg)</div>
                </div>
                <div class="text-center">
                    <div class="text-4xl font-bold text-sus-secondary mb-2" id="monthlyCO2">
                        <%= user.monthlyCO2Saved.toFixed(1) %>
                    </div>
                    <div class="text-sus-muted">This Month (kg)</div>
                </div>
                <div class="text-center">
                    <div class="text-4xl font-bold text-sus-accent mb-2" id="treesEquivalent">
                        <%= (user.totalCO2Saved * 0.05).toFixed(1) %>
                    </div>
                    <div class="text-sus-muted">Trees Equivalent</div>
                </div>
            </div>
        </div>

        <!-- Monthly Earnings -->
        <div class="card mb-8">
            <h3 class="text-xl font-semibold mb-4">üí∞ Monthly Earnings</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <div class="text-3xl font-bold text-sus-primary mb-2" id="monthlyCredits">
                        <%= user.monthlyCredits %>
                    </div>
                    <div class="text-sus-muted mb-4">susCoins earned this month</div>
                    <div class="bg-sus-line rounded-full h-3 mb-2">
                        <div class="bg-sus-primary h-3 rounded-full" style="width: <%= (user.monthlyCredits / user.monthlyGoal * 100).toFixed(0) %>%"></div>
                    </div>
                    <div class="text-sm text-sus-muted">
                        <%= user.monthlyCredits %> / <%= user.monthlyGoal %> monthly goal
                    </div>
                </div>
                <div>
                    <canvas id="earningsChart" width="400" height="200"></canvas>
                </div>
            </div>
        </div>

        <!-- Top Scoring Avenues -->
        <div class="card mb-8">
            <h3 class="text-xl font-semibold mb-4">üèÜ Your Top Impact Areas</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
                <div class="text-center p-4 bg-sus-primary/10 rounded-lg">
                    <div class="text-3xl mb-2">üöå</div>
                    <div class="font-semibold text-sus-primary">Transport</div>
                    <div class="text-sm text-sus-muted"><%= user.transportScore %> points</div>
                    <div class="text-xs text-sus-muted"><%= user.transportCO2.toFixed(1) %> kg CO‚ÇÇ</div>
                </div>
                <div class="text-center p-4 bg-sus-secondary/10 rounded-lg">
                    <div class="text-3xl mb-2">üíß</div>
                    <div class="font-semibold text-sus-secondary">Water</div>
                    <div class="text-sm text-sus-muted"><%= user.waterScore %> points</div>
                    <div class="text-xs text-sus-muted"><%= user.waterCO2.toFixed(1) %> kg CO‚ÇÇ</div>
                </div>
                <div class="text-center p-4 bg-sus-accent/10 rounded-lg">
                    <div class="text-3xl mb-2">üóëÔ∏è</div>
                    <div class="font-semibold text-sus-accent">Waste</div>
                    <div class="text-sm text-sus-muted"><%= user.wasteScore %> points</div>
                    <div class="text-xs text-sus-muted"><%= user.wasteCO2.toFixed(1) %> kg CO‚ÇÇ</div>
                </div>
                <div class="text-center p-4 bg-sus-info/10 rounded-lg">
                    <div class="text-3xl mb-2">‚ö°</div>
                    <div class="font-semibold text-sus-info">Electricity</div>
                    <div class="text-sm text-sus-muted"><%= user.electricityScore %> points</div>
                    <div class="text-xs text-sus-muted"><%= user.electricityCO2.toFixed(1) %> kg CO‚ÇÇ</div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
            <a href="/leaderboard" class="card hover:shadow-lg transition-shadow">
                <div class="text-2xl mb-3">üèÜ</div>
                <h4 class="font-semibold mb-2">Leaderboards</h4>
                <p class="text-sus-muted text-sm">Compare with your neighbourhood and city</p>
            </a>
            <a href="/connect-opal" class="card hover:shadow-lg transition-shadow">
                <div class="text-2xl mb-3">üöá</div>
                <h4 class="font-semibold mb-2">Connect Opal Card</h4>
                <p class="text-sus-muted text-sm">Track public transport automatically</p>
            </a>
            <a href="/connect-mastercard" class="card hover:shadow-lg transition-shadow">
                <div class="text-2xl mb-3">üí≥</div>
                <h4 class="font-semibold mb-2">Connect Mastercard</h4>
                <p class="text-sus-muted text-sm">Cash out your susCoins</p>
            </a>
            <a href="/tips" class="card hover:shadow-lg transition-shadow">
                <div class="text-2xl mb-3">üí°</div>
                <h4 class="font-semibold mb-2">Monthly Goals</h4>
                <p class="text-sus-muted text-sm">Get tips to reach your carbon targets</p>
            </a>
            <a href="/calculator" class="card hover:shadow-lg transition-shadow">
                <div class="text-2xl mb-3">üßÆ</div>
                <h4 class="font-semibold mb-2">Carbon Calculator</h4>
                <p class="text-sus-muted text-sm">Calculate emissions for any journey</p>
            </a>
            <a href="/redeem" class="card hover:shadow-lg transition-shadow">
                <div class="text-2xl mb-3">üéÅ</div>
                <h4 class="font-semibold mb-2">Redeem Rewards</h4>
                <p class="text-sus-muted text-sm">Use your susCoins for rewards</p>
            </a>
        </div>

        <!-- Recent Activity -->
        <div class="card">
            <h3 class="text-xl font-semibold mb-4">üìä Recent Activity</h3>
            <div class="space-y-3">
                <% user.recentActivity.forEach(activity => { %>
                <div class="flex items-center justify-between p-3 bg-sus-line/30 rounded-lg">
                    <div class="flex items-center space-x-3">
                        <div class="text-xl"><%= activity.icon %></div>
                        <div>
                            <div class="font-medium"><%= activity.description %></div>
                            <div class="text-sm text-sus-muted"><%= activity.time %></div>
                        </div>
                    </div>
                    <div class="text-right">
                        <div class="font-semibold text-sus-primary">+<%= activity.credits %> susCoins</div>
                        <div class="text-sm text-sus-muted"><%= activity.co2.toFixed(2) %> kg CO‚ÇÇ</div>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
    </main>

    <!-- Navigation Footer -->
    <nav class="fixed bottom-0 left-0 right-0 bg-sus-card border-t border-sus-line lg:hidden">
        <div class="flex justify-around py-2">
            <a href="/dashboard" class="flex flex-col items-center p-2 text-sus-primary">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
                </svg>
                <span class="text-xs mt-1">Dashboard</span>
            </a>
            <a href="/wallet" class="flex flex-col items-center p-2 text-sus-muted hover:text-sus-text">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
                </svg>
                <span class="text-xs mt-1">Wallet</span>
            </a>
            <a href="/redeem" class="flex flex-col items-center p-2 text-sus-muted hover:text-sus-text">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"></path>
                </svg>
                <span class="text-xs mt-1">Redeem</span>
            </a>
            <a href="/calculator" class="flex flex-col items-center p-2 text-sus-muted hover:text-sus-text">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                </svg>
                <span class="text-xs mt-1">Calculator</span>
            </a>
        </div>
    </nav>

    <script>
        // Initialize Socket.IO
        const socket = io();
        
        // Earnings Chart
        const ctx = document.getElementById('earningsChart').getContext('2d');
        const earningsChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: ['Week 1', 'Week 2', 'Week 3', 'Week 4'],
                datasets: [{
                    label: 'susCoins Earned',
                    data: [45, 78, 120, 156],
                    borderColor: '#065F46',
                    backgroundColor: 'rgba(6, 95, 70, 0.1)',
                    tension: 0.4,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: {
                            color: 'rgba(0,0,0,0.1)'
                        }
                    },
                    x: {
                        grid: {
                            display: false
                        }
                    }
                }
            }
        });

        // Real-time updates
        socket.on('userData', (data) => {
            document.getElementById('totalCO2').textContent = data.totalCO2Saved.toFixed(1);
            document.getElementById('monthlyCO2').textContent = data.monthlyCO2Saved.toFixed(1);
            document.getElementById('treesEquivalent').textContent = (data.totalCO2Saved * 0.05).toFixed(1);
            document.getElementById('monthlyCredits').textContent = data.monthlyCredits;
        });

        // Track page view
        socket.emit('analytics', { event: 'page_view', data: { page: 'dashboard' } });
    </script>
</body>
</html>
